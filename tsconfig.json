{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types/", 
      "./types", 
      "./node_modules"
    ],
    "types": [
      "esnext",
      "vite/client"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@backend/*": ["../backend/src/*"],
      "@store/*": ["src/store/*"],
      "@svg/*": ["assets/icons/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "assets/icons/*.svg"
  ],
  "exclude": [
    "node_modules"
  ],
  "isolatedModules": true,
}
