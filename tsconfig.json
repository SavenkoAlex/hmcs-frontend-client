{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [
    ],
    "types": [
      "webpack-env",
      "mocha",
      "chai",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@backend/*": ["../backend/src/*"],
      "@store/*": ["src/store/*"],
      "@svg/*": ["assets/icons/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "assets/icons/*.svg"
  ],
  "exclude": [
    "node_modules"
  ]
}
